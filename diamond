def print_diamond(n):
    # Print upper part of the diamond
    for i in range(1, n + 1):
        print(" " * (n - i) + "*" * (2 * i - 1))

    # Print lower part of the diamond
    for i in range(n - 1, 0, -1):
        print(" " * (n - i) + "*" * (2 * i - 1))


# Take input from the user
n = int(input("Enter the number of rows (half of diamond): "))
print_diamond(n)
